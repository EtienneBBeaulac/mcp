{
  "name": "@modelcontextprotocol/server-workflow-orchestration",
  "version": "1.2.0",
  "description": "MCP server for structured workflow orchestration and step-by-step task guidance",
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-server-workflow-orchestration": "dist/mcp-server-simple.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "build:mcp": "tsc -p tsconfig.mcp.json && shx chmod +x dist/*.js",
    "dev": "npm run build && node dist/cli.js start",
    "test": "jest",
    "prepare": "npm run build:mcp",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "workflow",
    "orchestration",
    "ai-assistant",
    "task-management"
  ]
}
